    yaxis: { show: false, ticks: 5, labelWidth: 0, tickFormatter: MyFormatter },
    grid: { show: true, margin: 10, borderColor: null, borderWidth: 0, labelMargin: 0
    }
    }
    );
    $('.datepicker').datepicker()
    });
	</script>

