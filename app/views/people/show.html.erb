<div class="span12 alpha">
    <div class="row-fluid chart_header">
        <h1 class="span6"><%= @person.first_name + " " + @person.last_name %> : <%= @date.strftime('%B %Y') %></h1>
        <%= form_tag person_url(@person), :method => :get do %>
        <%= hidden_field_tag :date, "#{@date - 1.month}" -%>
            <%= submit_tag "Previous Month" %>
        <% end %>
        <%= form_tag person_url(@person), :method => :get do %>
        <%= hidden_field_tag :date, "#{@date + 1.month}" -%>
            <%= submit_tag "Next Month" %>
        <% end %>
    </div>
    <div class="row-fluid chart_wrapper">
        <div class="span12">
            <%= content_tag(:div, "", id: "user_activity_graph", class: "graph", style: "width:100%;height:300px;", data: {x_values: x_values(@person, @date), y_values: y_values(@person, @date)}) %>
			<ul class="row-fluid activity_info">
				<li class="span6 pull-left steps">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter(@person.lifetime_steps, :delimiter => ',') %></span><br/>Total Steps</p>
				</li>
				<li class="span6 aerobic">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter(@person.lifetime_aerobic_steps, :delimiter => ',') %></span><br/>Total Aerobic Steps</p>
				</li>
				<li class="alpha span6 miles">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter('%.2f' % @person.lifetime_distance, :delimiter => ',') %></span><br/>Total Miles</p>
				</li>
				<li class="span6 calories">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter(@person.lifetime_calories, :delimiter => ',') %></span><br/>Total Calories Burned</p>
				</li>
			</ul>
		</div>
	</div>
</div>
<div class="span12 alpha">
    <h3>Recent uploads</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="span2">Steps</th>
                    <th class="span3"><span class="line"></span>Date</th>
                    <th class="span3"><span class="line"></span>Device</th>
                </tr>
            </thead>
            <tbody>
                <% @person.uploads.each do |upload| %>
                    <tr class="first">
                        <td><%= upload.total_steps %></td>
                        <td><%= upload.upload_time.strftime("%b %d, %Y") %></td>
                        <td><%= upload.person.dev_serial %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
