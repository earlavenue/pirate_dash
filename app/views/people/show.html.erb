<div class="span12 alpha">
    <div class="row-fluid chart_header">
        <h1 class="span8"><%= @person.first_name + " " + @person.last_name %></h1>
        <h2 class="span4 date"><%= @date.strftime('%B %Y') %></h2>
        <div class="controls">

        <% unless @date.beginning_of_month <= @person.uploads.first.upload_time %>
            <%= form_tag person_url(@person), :method => :get do  %>
                <%= hidden_field_tag :date, "#{@date - 1.month}" -%>
                <div class="btn btn_hack prev">
                    <i class="icon-arrow-left"></i><%= submit_tag "Previous Month"%>
                </div>
            <% end %>
        <% end %>
        <% unless @date.end_of_month >= @person.uploads.last.upload_time %>
            <%= form_tag person_url(@person), :method => :get do %>
                <%= hidden_field_tag :date, "#{@date + 1.month}" -%>
                <div class="btn btn_hack next pull-right">
                    <%= submit_tag "Next Month"%><i class="icon-arrow-right"></i>
                </div>
            <% end %>
        <% end %>
    </div>
    </div>
    <div class="row-fluid chart_wrapper">
        <div class="span12">
            <%= content_tag(:div, "", id: "user_activity_graph", class: "graph", style: "width:100%;height:300px;", data: {x_values: x_values(@person, @date), y_values: y_values(@person, @date)}) %>
			<ul class="row-fluid activity_info">
				<li class="span6 pull-left steps">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter(@month_stats[:steps], :delimiter => ',') %></span><br/>Total Steps</p>
				</li>
				<li class="span6 aerobic">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter(@month_stats[:aerobic_steps], :delimiter => ',') %></span><br/>Total Aerobic Steps</p>
				</li>
				<li class="alpha span6 miles">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter('%.2f' % @month_stats[:distance], :delimiter => ',') %></span><br/>Total Miles</p>
				</li>
				<li class="span6 calories">
					<i class="clearfix"></i>
					<p class="span7"><span><%= number_with_delimiter(@month_stats[:calories], :delimiter => ',') %></span><br/>Total Calories Burned</p>
				</li>
			</ul>
		</div>
	</div>
</div>
<div class="span12 alpha">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="span3"><span class="line"></span>Date</th>
                    <th class="span2">Steps</th>
                </tr>
            </thead>
            <tbody>
                <% monthly_uploads = @person.uploads.within_date_range(@date.beginning_of_month, @date.end_of_month) %>
                <% monthly_uploads.each do |upload| %>
                    <tr class="first">
                        <td><%= upload.upload_time.strftime("%b %d, %Y") %></td>
                        <td><%= upload.total_steps %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
