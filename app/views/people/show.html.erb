<p id="notice"><%= notice %></p>

<div class="content">
    <div class="container-fluid">
        <div id="pad-wrapper" class="user-profile">
            <!-- header -->
            <div class="row-fluid header">
                <div class="span8">
                    <h3 class="name"><%= @person.first_name %> <%= @person.last_name %></h3>
                    <span class="area">Maybe badges go here, or something?</span>
                </div>
                <a class="btn btn-flat icon pull-right delete-user" data-toggle="tooltip" title="Delete user" data-placement="top">
                    <i class="icon-trash"></i>
                </a>
                 <%= link_to "Edit this person", edit_person_path(@person), class: "btn btn-flat icon large pull-right edit" %>
            </div>

            <div class="row-fluid profile">
                <!-- bio, new note & orders column -->
                <div class="span9 bio">
                    <div class="profile-box">
                        <!-- biography -->
                        <div class="span12 section">
                            <h6>Some attributes</h6>
                            <ul>
                              <li>KM UserID: <%= @person.km_userid %></li>
                              <li>Omron UserID: <%= @person.omron_userid %></li>
                              <li>Device serial number: <%= @person.dev_serial %></li>
                            </ul>
                        </div>

                        <h6>Recent uploads</h6>
                        <br>
                        <!-- recent orders table -->
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="span2">
                                        Count
                                    </th>
                                    <th class="span3">
                                        <span class="line"></span>
                                        Date
                                    </th>
                                    <th class="span3">
                                        <span class="line"></span>
                                        Device
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @person.uploads.each do |upload| %>
                                <tr class="first">
                                    <td>X</td>
                                    <td><%= upload.upload_time %></td>
                                    <td>Y</td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- side address column -->
                <!-- <div class="span3 address pull-right">
                    <h6>Location</h6>
                    <iframe width="300" height="133" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com.mx/?ie=UTF8&amp;t=m&amp;ll=19.715081,-155.071421&amp;spn=0.010746,0.025749&amp;z=14&amp;output=embed"></iframe>
                    <ul>
                         <li class="ico-li"><i class="icon-envelope"></i><%= mail_to @person.email %></li>
                    </ul>
                </div> -->
            </div>
        </div>
    </div>
</div>
<!-- end main container -->
