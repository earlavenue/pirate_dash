
	<div id="wrap">

	      <div class="container-fluid" style="padding-top: 60px; margin-bottom: 1em;">
	      <div class="row-fluid" id="app_container">

			<div class="span10">
			      	<div class="row-fluid chart_header">
		            	<h2 class="span6"><%= @person.first_name + " " + @person.last_name %> <!-- span class="date">06/8/2013</span> <span class="ago">1 Day ago</span--> </h2>
		            	<div class="span6 chart_control">

							<div class="btn-group span6 visible-desktop hidden-phone">
								<button class="btn"><a href="#" title="Print"><i class="print"></i></a></button>
								<button class="btn"><a href="#" title="Download"><i class="download"></i></a></button>
								<button class="btn"><a href="#" title="Edit"><i class="edit"></i></a></button>
							</div>
							<input type="text" class="span6 datepicker" value="06/28/13" data-date-format="mm/dd/yy">
		            	</div>
		            </div>
		            <div class="row-fluid chart_wrapper">
						<div class="span12">
							<div id="day_activity_graph" class="graph" style="width:100%;height:200px;"></div>
							<ul class="row-fluid activity_info">
								<li class="span6 pull-left steps">
									<i class="clearfix"></i>
									<p class="span7"><span><%= @person.lifetime_steps %></span><br/>Total Steps</p>
								</li>
								<li class="span6 aerobic">
									<i class="clearfix"></i>
									<p class="span7"><span><%= @person.lifetime_aerobic_steps%></span><br/>Total Aerobic Steps</p>
								</li>
								<li class="alpha span6 miles">
									<i class="clearfix"></i>
									<p class="span7"><span><%= '%.2f' % @person.lifetime_distance%></span><br/>Total Miles</p>
								</li>
								<li class="span6 calories">
									<i class="clearfix"></i>
									<p class="span7"><span><%= @person.lifetime_calories%></span><br/>Total Calories Burned</p>
								</li>
							</ul>
						</div>
					</div>
			</div>

		  </div>
	      </div>

                       <!-- recent orders table -->
                        <h6>Recent uploads</h6>
                        <br>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="span2">
                                        Steps
                                    </th>
                                    <th class="span3">
                                        <span class="line"></span>
                                        Date
                                    </th>
                                    <th class="span3">
                                        <span class="line"></span>
                                        Device
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @person.uploads.each do |upload| %>
                                <tr class="first">
                                    <td><%= upload.total_steps %></td>
                                    <td><%= upload.upload_time.strftime("%b %d, %Y") %></td>
                                    <td><%= upload.person.dev_serial %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>



		  <div id="push"></div>
	</div><!--/ .wrap -->




    <script>
$(document).ready(function () {
    var graphData = [{
