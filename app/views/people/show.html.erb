            color: '#1ec1eb'
        }
    ];

    function MyFormatter(v, xaxis) {
    return " ";
    }
    $.plot($('#day_activity_graph'), graphData, {
    series: {
        lines: { show: true,lineWidth: 3,fill: true, fillColor: { colors: [  { opacity: 0.0 }, { opacity: 0.7 }, ] } },
        points: { show: true, radius: 4,lineWidth: 2, fillColor: "#1ec1eb"  },
        shadowSize: 0,
        highlightColor: 2,
        hoverable: true
