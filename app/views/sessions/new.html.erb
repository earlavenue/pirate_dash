<h1>Sign in</h1>

<p><%= notice %></p>

<%= form_tag sessions_url do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <br>
  <%= submit_tag "Sign in", class: 'btn btn-success' %>
<% end %>

<p>Or <%= link_to "Sign up", new_user_url %></p>
