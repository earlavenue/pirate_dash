        <div class="btn-group span3 controls">
        <% unless @year <= 2012 %>
            <div class="btn btn_hack prev">
                <%= link_to content_tag(:i, " ", :class => "icon-arrow-left"), {controller: "pirates", action: "activations", year: @year - 1} %>
            </div>
        <% end %>

            <button class="btn"><%= @year %></button>

        <% unless @year >= Time.now.year %>
            <div class="btn btn_hack next">
                <%= link_to content_tag(:i, " ", :class => "icon-arrow-right"), {contoller: "pirates", action: "activations", year: @year + 1} %>
            </div>
        <% end %>
        </div>
                <!-- jQuery flot chart -->
                <div class="row-fluid section">
                    <h4 class="title">
                        Activated <small>Monthly growth</small>
                    </h4>
                    <div class="span12 alpha">
                      <%= activations_chart %>
                    </div>
                </div>

        <div class="row-fluid section">
            <h4 class="title">
                        Activated <small>by Quarter</small>
                    </h4>
                        <div class="span3 well alpha">
                            <div class="data">
                              <h4 >
                                Q1
                              </h4>
                              <p>
                                <span class="number activated"><%= quarterly_values(@aggregate_month_activations)[0] %></span>
                                <span class="property">Activations</span>
                              </p>
                            </div>
                        </div>
                        <div class="span3 well">
                            <div class="data">
                              <h4 class="device_name">
                                Q2
                              </h4>
                              <p>
                                <span class="number activated"><%= quarterly_values(@aggregate_month_activations)[1] %></span>
                                <span class="property">Activations</span>
                              </p>
                            </div>
                        </div>
                        <div class="span3 well">
                            <div class="data">
                              <h4>
                                Q3
                              </h4>
                              <p>
                                <span class="number activated"><%= quarterly_values(@aggregate_month_activations)[2] %></span>
                                <span class="property">Activations</span>
                              </p>
                            </div>
                        </div>
                        <div class="span3 well">
